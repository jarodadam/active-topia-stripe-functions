rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to documents in the 'gymProducts' collection
    // This is necessary for your getGymProducts Cloud Function to fetch data.
    // For production, you would tighten this rule to ensure only authenticated
    // requests or requests from your Cloud Function's service account are allowed.
    match /gymProducts/{productId} {
      allow read: if true; // Allows read access to gymProducts
      allow write: if false; // Disallow direct writes from frontend
    }

    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}